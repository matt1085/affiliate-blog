# Site Settings
baseURL = "https://matt1085-affiliate.netlify.app/"
languageCode = "en-us"
title = "Smart Gear Reviews"
theme = "kiera"
paginate = 10
enableRobotsTXT = true

[params]
  subtitle = "Expert reviews and buying guides for outdoor gear, power stations, and smart home essentials"
  author = "Matthew Peterson"
  githubURL = "https://github.com/matt1085/affiliate-blog"
  twitter = "@matt_peterson1085"
  linkedin = "matt-peterson-1085"

  # Layout & UI
  showReadingTime = true
  showSidebar = true
  enableToc = true       # table of contents for posts
  showCategories = true
  showTags = true

  # SEO & Analytics
  googleAnalytics = "G-503912485"  # GA4 Measurement ID
  enableSitemap = true
  rss = true
  defaultOGImage = "/images/default-og.jpg"

  # Affiliate / Product Settings
  enableAffiliateButtons = true
  featuredImageWidth = 1200
  enableFeaturedImages = true
  showProductPrice = true
  showRatingStars = true
  relatedPostsCount = 3

  # Date Formats
  dateform = "January 2, 2006"
  dateformShort = "Jan 2, 2006"
  dateformNumTime = "2006-01-02 15:04"

  # Custom CSS (optional)
  customCSS = ["css/custom.css"]
